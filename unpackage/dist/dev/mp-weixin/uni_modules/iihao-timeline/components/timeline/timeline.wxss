.timeline-item {
  position: relative;
  padding-bottom: 20px;
}
.timeline-item .left-line {
  position: absolute;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  width: 40px;
  flex-direction: column;
  align-items: center;
}
.timeline-item .left-line .timeline-item-tail {
  height: 100%;
  width: 2px;
  background-color: #c7c7c7;
}
.timeline-item .left-line .timeline-item-icon {
  background-color: #e4e7ed;
  border-radius: 50%;
  width: 12px;
  height: 12px;
  max-width: 40px;
  max-height: 40px;
  z-index: 10;
  opacity: 0.6;
}
.timeline-item .timeline-item-wrapper {
  position: relative;
  padding-left: 44px;
}
.timeline-item .timeline-item-wrapper .time {
  color: #999999;
  font-size: 30rpx;
  max-height: 40px;
}
.timeline-item .timeline-item-wrapper .item-body {
  background-color: #FFFFFF;
  padding: 20rpx;
  margin-left: -80rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  border-color: #f2f2f2;
  -webkit-padding-start: 50rpx;
          padding-inline-start: 50rpx;
}
.timeline-item .timeline-item-wrapper .item-body .title {
  color: #199ED8;
  font-size: 32rpx;
  font-weight: 500;
}
.timeline-item .timeline-item-wrapper .item-body .title .title-text {
  display: inline-block;
  vertical-align: middle;
  padding-left: 10rpx;
}
.timeline-item .timeline-item-wrapper .item-body .desc {
  -webkit-padding-start: 30rpx;
          padding-inline-start: 30rpx;
  padding-top: 10rpx;
  color: #7f7f7f;
  font-size: 30rpx;
}