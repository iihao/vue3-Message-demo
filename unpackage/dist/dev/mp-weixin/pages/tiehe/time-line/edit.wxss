
.uni-container {
    padding: 15px;
    --button-bg: #1a233b;
}
.uni-bth {
    height: 40px;
    width: 40%;
    background-color: var(--button-bg) !important;
    font-size: 16px;
}
.uni-input-border,
  .uni-textarea-border {
    width: 100%;
    font-size: 14px;
    color: #666;
    border: 1px #e5e5e5 solid;
    border-radius: 5px;
    box-sizing: border-box;
}
.uni-input-border {
    padding: 0 10px;
    height: 35px;
}
.uni-textarea-border {
    padding: 10px;
    height: 80px;
}
.uni-button-group {
    margin-top: 50px;

    display: flex;

    justify-content: center;
}
.uni-button {
    width: 184px;
}
